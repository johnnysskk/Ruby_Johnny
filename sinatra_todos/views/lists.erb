
<% if session[:success] %>
  <div class="flash success">
   <p> <%= session.delete(:success) %> </p>
  </div>
<%end%>




<ul id="lists">
<% @lists.each_with_index do |list, index| %>
 <% if list_complete?(list) %>
   <li class="complete">
 <% else %>
   <li>
 <% end %> 
   <a href="/lists/<%= index %>"> 
     <h2> <%= list[:name] %> </h2> 
     <p>
     <%= todos_remaining_count(list) %> / <%=todos_count(list) %> 
     </p>
   </a>
  </li> 
<% end %>
</ul>
<% content_for :header_links do %>
  <a class="add" href= "/lists/new">  Make a new list </a>
<% end %>